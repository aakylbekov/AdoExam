        <Button x:Name="button" Content="Generate Report" HorizontalAlignment="Left" Margin="85,163,0,0" VerticalAlignment="Top" Width="102" Height="45" Click="button_Click"/>
        <!--<Button x:Name="button1" Content="Send Email" HorizontalAlignment="Left" Margin="254,163,0,0" VerticalAlignment="Top" Width="102" Height="45" Click="button1_Click" />-->
        <Button Content="Send EMail" Click="ButtonClicked" Height="45" HorizontalAlignment="Left" Margin="254,163,0,0" Name="button1" VerticalAlignment="Top" Width="108" />


